<Window x:Class="Session1Try6.Pages2.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session1Try6.Pages2"
        mc:Ignorable="d"
        Title="AddClientWindow" Height="450" Width="800">
    <ScrollViewer>
       
    <StackPanel x:Name="ClientSp">
        <Label Content="Имя"/>
        <TextBox x:Name="NameTb" Text="{Binding Name}"/>
        <Label Content="Фамилия"/>
        <TextBox x:Name="SurnameTb" Text="{Binding Surname}"/>
        <Label Content="Отчество"/>
        <TextBox x:Name="PatroTb" Text="{Binding Patronimic}"/>

        <Label Content="Дата рождения"/>
        <DatePicker Name="BirthDateDp" SelectedDate="{Binding BirthDate}"/>

        <Label Content="Серия паспорта"/>
        <TextBox x:Name="PassSTb" Text="{Binding Passport_S}"/>
        <Label Content="Номер паспорта"/>
        <TextBox x:Name="PassNumTb" Text="{Binding Passport_N}"/>

        <Label Content="Телефон"/>
        <TextBox x:Name="PhoneTb" Text="{Binding Phone}"/>

        <Label Content="Email"/>
        <TextBox x:Name="EmailTb" Text="{Binding Email}"/>

        <Label Content="Ораганизация"/>
        <ComboBox x:Name="OrgCb" SelectedItem="{Binding Organisation}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Добавить"/>
        <Button x:Name="CancelBtn" Click="CancelBtn_Click" Content="Отменить"/>
    </StackPanel>
    </ScrollViewer>
</Window>
