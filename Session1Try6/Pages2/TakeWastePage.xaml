<Page x:Class="Session1Try6.Pages2.TakeWastePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1Try6.Pages2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TakeWastePage" Height="600" Width="600">

    <ScrollViewer>
        

    <StackPanel x:Name="OrderSp">
        <Label Content="Код"/>
        <TextBox x:Name="CodeTb" IsReadOnly="True" KeyUp="CodeTb_KeyUp" Text="{Binding Code}"/>
        <Button x:Name="QRButton" Content="QR-код" Click="QRButton_Click"/>

        <StackPanel x:Name="VisSp" Visibility="Collapsed">
            <Label Content="Поиск"/>
            <TextBox x:Name="SearchClientTb" TextChanged="SearchClientTb_TextChanged"/>
            <Label Content="Клиент"/>
            <ComboBox x:Name="ClientCb" SelectedItem="{Binding Client}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Fio}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button x:Name="AddCientBtn" Click="AddCientBtn_Click" Content="Новый"/>

            <Label Content="Поиск"/>
            <TextBox x:Name="ServiceTbSearchTb" TextChanged="ServiceTbSearchTb_TextChanged"/>

            <Label Content="Услуга"/>
            <ComboBox x:Name="ServiceCb" SelectedItem="{Binding Service}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button x:Name="AddBtnService" Click="AddBtnService_Click" Content="Добавить"/>

            <DataGrid x:Name="ServiceDg" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Стоимость" Binding="{Binding Price}"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBox x:Name="FinalTb" IsEnabled="False"/>
            <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Ок"/>
        </StackPanel>
    </StackPanel>
    </ScrollViewer>
</Page>
