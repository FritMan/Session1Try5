<Window x:Class="Session1Try6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session1Try6"
        mc:Ignorable="d"
        Title="Ne Navredi" Height="450" Width="800" MinHeight="400" MinWidth="600" Icon="/Assets/Значок приложения.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="ExitBtn" Click="ExitBtn_Click" Content="Выход" Background="Red" Grid.Column="2"/>

        <Image Source="/Assets/Логотип.png" Width="80" HorizontalAlignment="Left" Margin="10"/>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Source="Pages\AuthPage.xaml" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
