<Window x:Class="Session1Try6.Pages3.OrgBillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session1Try6.Pages3"
        mc:Ignorable="d"
        Title="Счёт организации" Height="450" Width="800" MinHeight="400" MinWidth="600">
    <ScrollViewer>
       
    <StackPanel>
       
        <StackPanel x:Name="BillSp">
            <Label Content="Название"/>
                <ComboBox x:Name="OrgCb" SelectionChanged="OrgCb_SelectionChanged" SelectedItem="{Binding Organisation}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            <Label Content="Период"/>

            <StackPanel Orientation="Horizontal">
                <Label Content="с"/>
                <DatePicker Name="StartDp" SelectedDateChanged="StartDp_SelectedDateChanged"/>
                <Label Content="по"/>
                <DatePicker Name="EndDp" SelectedDateChanged="EndDp_SelectedDateChanged"/>
            </StackPanel>

            <Label Content="Перечень услуг"/>
            <DataGrid x:Name="ServiceDg" IsReadOnly="True" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Service.Name}"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Service.Price}"/>
                </DataGrid.Columns>
            </DataGrid>

            <Label Content="Финальная стоимость"/>
            <TextBox x:Name="FinalTb" IsEnabled="False"/>
        </StackPanel>

        <Button x:Name="PdfBtn" Click="PdfBtn_Click" Content="PDF"/>
        <Button x:Name="CsvBtn" Click="CsvBtn_Click" Content="CSV"/>
            <Button x:Name="CloseBtn" Click="CloseBtn_Click" Content="Закрыть"/>
        </StackPanel>
    </ScrollViewer>
</Window>
