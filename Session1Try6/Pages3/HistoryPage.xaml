<Page x:Class="Session1Try6.Pages3.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1Try6.Pages3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HistoryPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Content="Фильтрация"/>
            <TextBox x:Name="FilterTb" TextChanged="FilterTb_TextChanged"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="2">
            <Label Content="Сортировка"/>
            <TextBox x:Name="SortTb" TextChanged="SortTb_TextChanged"/>
        </StackPanel>

        <DataGrid x:Name="EnterDg" IsReadOnly="True" AutoGenerateColumns="False" Grid.Row="1" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ip-Адрес" Binding="{Binding User.IpAddress}"/>
                <DataGridTextColumn Header="Дата/Время" Binding="{Binding DateTimeEnter}"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding User.Login}"/>
                <DataGridTextColumn Header="Успешно/Не успешно" Binding="{Binding Sucsessfuly}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="RebutBtn" Click="RebutBtn_Click" Content="Сброс" Grid.Column="1"/>
    </Grid>
</Page>
