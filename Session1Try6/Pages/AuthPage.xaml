<Page x:Class="Session1Try6.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1Try6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Loaded="Page_Loaded"
      Title="AuthPage">

    <StackPanel>
        <Label Content="Логин"/>
        <TextBox x:Name="LoginTb"/>
        <Label Content="Пароль"/>
        <PasswordBox x:Name="PwdPb"/>
        <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Войти"/>


        <StackPanel x:Name="CaptchaSp" Visibility="Collapsed">
            <Canvas Width="700" Height="200">
                <Image Source="/Assets/инь.png" Canvas.Top="30" x:Name="InImg"/>
                <Image Source="/Assets/янь.png" Canvas.Top="30" Canvas.Right="100"/>
            </Canvas>

            <Slider x:Name="SliderCaptch" Width="700" Maximum="700" Minimum="0" ValueChanged="SliderCaptch_ValueChanged"/>
        </StackPanel>
    </StackPanel>
</Page>
